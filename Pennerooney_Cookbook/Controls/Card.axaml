<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        >
    <Design.PreviewWith>
        <Card />
    </Design.PreviewWith>

    <Style Selector="Card">
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{DynamicResource PrimaryCardGradient}" 
                        Width="230" 
                        Height="230
                        "
                        CornerRadius="20"
                        Padding="15 0"
                        >
                    <Grid RowDefinitions="*, *, *, *">
                        <Label Grid.Row="0" 
                               Content="Recipe1"
                               HorizontalAlignment="Center"
                               FontSize="18"
                               />
                        
                        <Grid Grid.Row="1" 
                              ColumnDefinitions="*, *, *">
                            <Label Grid.Column="0" 
                                   Content="Method" 
                                   HorizontalAlignment="Center" />
                            <Label Grid.Column="1" 
                                   Content="Genre" 
                                   HorizontalAlignment="Center" />
                            <Label Grid.Column="2" 
                                   Content="Purpose" 
                                   HorizontalAlignment="Center"/>
                        </Grid>
                        
                        <Grid Grid.Row="2" ColumnDefinitions="*, *">
                            <StackPanel Grid.Column="0" VerticalAlignment="Bottom">
                                <Label HorizontalAlignment="Center" Content="Rating" Margin="0"/> 
                                <Label HorizontalAlignment="Center" Content="Stars" Margin="0"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" VerticalAlignment="Bottom">
                                <Label HorizontalAlignment="Center" Content="Difficulty" Margin="0"/> 
                                <Label HorizontalAlignment="Center" Content="Stars" Margin="0"/>
                            </StackPanel> 
                        </Grid>
                        
                        <Grid Grid.Row="3" ColumnDefinitions="*, Auto">
                            <Label Grid.Column="0" Content="Last Cooked Date" VerticalAlignment="Bottom"/>
                            <Label Grid.Column="1" Content="Fav" VerticalAlignment="Bottom"/>
                        </Grid>
                        
                    </Grid>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
